<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/woodbackground">

    <Button
        android:id="@+id/start"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginVertical="430dp"
        android:background="@drawable/play"
        android:onClick="goToGame"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/settings"
        android:onClick="goToSetting" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/share"
        android:layout_marginVertical="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="GoToShare" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="330dp"
        android:background="@drawable/info"
        android:onClick="GoToInfo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/pineapple"
        android:layout_marginVertical="370dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/peach"
        android:layout_marginVertical="130dp"
        android:layout_marginLeft="300dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/kiwi"
        android:layout_marginVertical="480dp"
        android:layout_marginLeft="300dp"/>

</RelativeLayout>